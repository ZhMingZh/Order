.container {
    width: 100%;
    background-color: #F2f2f2;
}

.comment-list {
    width: 100%;
}

.comment-list .a-order {
    width: 100%;
    background-color: #fff;
    margin-top: 20 rpx;
}

.comment-list .a-order .order-date {
    padding: 0 30 rpx;
    height: 88 rpx;
    display: flex;
    justify-content: space-between;
    font-size: 26 rpx;
    color: #000000;
    align-items: center;
}

.comment-list .a-order .order-date .red {
    font-size: 26 rpx;
    color: #e64340;
}

.a-order .goods-info {
    width: 720 rpx;
    margin-left: 30 rpx;
    border-top: 1 rpx solid #eee;
    border-bottom: 1 rpx solid #eee;
    padding: 30 rpx 0;
    display: flex;
    align-items: center;
}


.goods-info .goods-des {
    width: 540 rpx;
    height: 78 rpx;
    line-height: 39 rpx;
    font-size: 26 rpx;
    color: #000000;
    overflow: hidden;
}